<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.company.tasktrack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".Activities.LoginActivity"
            android:theme="@style/Theme.TaskTrack">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.EmployeeActivity" />
        <activity
            android:name=".Activities.AdminActivity"
            android:label="@string/title_activity_admin"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ManagerActivity"
            android:label="@string/title_activity_manager"
            android:theme="@style/AppTheme"></activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="c67cdcdf4597d2df72fc6754ba82a86200f11035" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>