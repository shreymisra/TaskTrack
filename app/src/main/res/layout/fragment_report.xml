<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/windowBackground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.company.tasktrack.Fragments.Admin.AdminReportFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"
            android:id="@+id/dateWiseReport"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="start|center"
                android:padding="@dimen/_4sdp"
                android:text="Employee Date Wise Report"
                android:textColor="#FD808080"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/empName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="left|center_vertical"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:tooltipText="Select an Employee" />
        <android.support.design.widget.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_7sdp"
            android:id="@+id/fromDateLayout"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fromDate"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                />
        </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/toDateLayout"
                android:layout_marginTop="@dimen/_7sdp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toDate"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/colorAccentDark"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_7sdp"
                android:id="@+id/dateWise"
                android:text="Generate Date Wise Report"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"
            android:id="@+id/dayWiseReport"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="start|center"
                android:padding="@dimen/_4sdp"
                android:text="Employee Day Wise Report"
                android:textColor="#FD808080"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/empName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="left|center_vertical"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:tooltipText="Select an Employee" />
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_7sdp"
                android:id="@+id/dateLayout"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/colorAccentDark"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_7sdp"
                android:id="@+id/dayWise"
                android:text="Generate Day Wise Report"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

